<header class="navbar navbar-expand-lg navbar-light bg-custom">
    <a class="navbar-brand" id="brand-name" href="#">Pro Sports</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav ml-auto">
            <% if (locals.user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <%= user.name %>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/matches">
                        Host a Match
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/matches/#availableMatches">
                        Find a Match
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#turf-list-container">
                        Find the Turf
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/sign-out">Sign Out</a>
                </li>
            <% } else if (locals.admin) { %>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <%= admin.name %>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admins/sign-out">Sign Out</a>
                </li>
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/users/sign-in">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </div>
</header>
