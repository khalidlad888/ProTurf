<header class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Pro Sports</a>
    <ul class="navbar-nav ml-auto">
        <% if (locals.user) { %>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <%= user.name %>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/users/sign-out">Sign Out</a>
            </li>
        <% } else if (locals.admin) { %>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <%= admin.name %>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admins/sign-out">Sign Out</a>
            </li>
        <% } else { %>
            <li class="nav-item">
                <a class="nav-link" href="/users/sign-in">Sign In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/users/sign-up">Sign Up</a>
            </li>
        <% } %>
    </ul>
</header>