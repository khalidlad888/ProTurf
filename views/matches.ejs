<link rel="stylesheet" type="text/css" href="../css/matches.css">

<div class="container mt-5">
    <h1>Host a Match</h1>

    <!-- Host a Match Form -->
    <form action="/matches/create-match" method="post" id="matchForm">
        <div class="form-group">
            <label for="matchName">Match Name</label>
            <input type="text" class="form-control" id="matchName" placeholder="Enter match name" required>
        </div>
        <div class="form-group">
            <label for="gameName">Select Game</label>
            <select class="form-control" id="gameName" required>
                <option value="cricket">Cricket</option>
                <option value="football">Football</option>
            </select>
        </div>
        <div class="form-group">
            <label for="gameLevel">Game Level</label>
            <select class="form-control" id="gameLevel" required>
                <option value="Beginner">Beginner</option>
                <option value="Amatuer">Amatuer</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Skilled">Skilled</option>
                <option value="Experienced">Experienced</option>
            </select>
        </div>
        <div class="form-group">
            <label for="location">Select Turf</label>
            <select name="turf" id="" class="form-control">
                <% for (let i=0; i < turf.length; i++) { %>
                    <option value="<%= turf[i].name %>">
                        <%= turf[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" required>
        </div>
        <div class="form-group">
            <label for="startTime">Start Time</label>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <% for (var i=6; i <=11; i++) { %>
                    <label class="btn btn-secondary">
                        <input type="radio" name="startTime" value="<%= i %>:00 AM">
                        <%= i %>:00 AM
                    </label>
                    <% } %>
                        <label class="btn btn-secondary">
                            <input type="radio" name="startTime" value="11:00 AM">
                            12:00 PM
                        </label>
                        <% for (var i=1; i <=10; i++) { %>
                            <label class="btn btn-secondary">
                                <input type="radio" name="startTime" value="<%= i %>:00 PM">
                                <%= i %>:00 PM
                            </label>
                            <% } %>
            </div>
        </div>
        <div class="form-group">
            <label for="endTime">End Time</label>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <% for (var i=7; i <=11; i++) { %>
                    <label class="btn btn-secondary">
                        <input type="radio" name="endTime" value="<%= i %>:00 AM">
                        <%= i %>:00 AM
                    </label>
                    <% } %>
                        <label class="btn btn-secondary">
                            <input type="radio" name="endTime" value="11:00 AM">
                            12:00 PM
                        </label>
                        <% for (var i=1; i <=11; i++) { %>
                            <label class="btn btn-secondary">
                                <input type="radio" name="endTime" value="<%= i %>:00 PM">
                                <%= i %>:00 PM
                            </label>
                            <% } %>
            </div>
        </div>        
        <button type="submit" class="btn btn-primary">Host Match</button>
    </form>

    <hr>

    <h2>Available Matches</h2>

    <!-- Available Matches List -->
    <div>
        <ul id="availableMatches">
            <li>Match 1</li>
            <li>Match 2</li>
            <li>Match 3</li>
            <!-- Add dynamic content here from your backend or JavaScript -->
        </ul>
    </div>
</div>