<link rel="stylesheet" href="/css/user_sign_up.css">

<div class="container">
    <div id="user_sign_up_form" class="mt-5">
        <h1 class="mb-4">Sign Up</h1>

        <form action="/users/create" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Your Email" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input type="number" name="number" class="form-control" placeholder="Mobile No" required>
            </div>
            <div class="form-group">
                <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" required>
            </div>

            <input type="submit" value="Sign Up" class="btn btn-primary">
        </form>

        <p class="mt-3">
            <a href="/users/auth/google" class="google-signin">Sign-Up using Google</a>
        </p>
    </div>
</div>